.panel
  .panel-body
    .row
      .col-xs-3
        h3 Login
        form(role='form', novalidate, name='userForm')
          .form-group
            label(for='email') Email
            input.form-control#email(type='email', name='email', ng-model='user.email', autofocus, required)
          .form-group
            label(for='password') Password
            input.form-control#password(type='password', name='password', ng-model='user.password', required, ng-minlength='3')
          button.btn.btn-primary(ng-show='userForm.$valid', ng-click='login()') Login
      .col-xs-1
      .col-xs-2
        h3 No Account?
        h4: a(href='/#/register') Click To Register
      .col-xs-6

