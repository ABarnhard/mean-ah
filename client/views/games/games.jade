.panel
  .panel-body
    .row
      .col-xs-12
        h3 Game: {{game.name}}
        button.btn.btn-primary(type='button', ng-show='game.isOwner && game.status === \'open\'', ng-click='startGame(game._id)') Start Game
        button.btn.btn-primary(type='button', ng-click='leaveGame(game._id)') Leave Game
        button.btn.btn-primary(type='button', ng-click='drawHand()') Draw Hand
        button.btn.btn-primary(type='button', ng-click='startRound()') Start Round
    .row
      .col-xs-12
        .players
          .player(ng-repeat='p in game.players') {{p}}
    .row
      .col-xs-12
        .gameboard
          .row
            .col-xs-12
              .qcard(ng-show='game.round.qcard') {{game.round.qcard.text}}
          .row#czar-wrapper(ng-show='game.cardCzar === alias && game.hand.length')
            .col-xs-12
              .row(ng-hide='playedAnswers')
                .col-xs-12
                  p WAITING ON PLAYERS TO ANSWER
              .row(ng-show='playedAnswers')
                .col-xs-12
                  div
                    button.btn.btn-danger(type='button', ng-show='winner', ng-click='submitWinner()') Pick Winner
                  div(ng-repeat='ans in playedAnswers', ng-click='pickWinner(ans)')
                    .card(ng-repeat='c in ans.answers')
          .row#hand-wrapper(ng-hide='game.cardCzar === alias')
            .col-xs-12
              .row
                .col-xs-12
                  .hand
                    .card(ng-repeat='card in game.hand', ng-click='selectAnswer(card)') {{card.text}}
              .row
                .col-xs-12
                  .play-hand
                    button.btn.btn-danger(type='button', ng-show='!game.play && game.answers.length === game.round.qcard.numAnswers', ng-click='playAnswers()') Play Card(s)
    .row
      .col-xs-12
        .gameinfo
          .deck Q Deck Here
          .deck A Deck Here
          .cardCzar isCardCzar
          .awesome-points # Awesome Points (wins)
          button.btn.btn-primary(type='button', ng-click='reDeal()') Redeal Hand

.row
  .col-xs-12
    pre {{alias | json}}
    pre {{playedAnswers | json}}
    pre {{game | json}}

