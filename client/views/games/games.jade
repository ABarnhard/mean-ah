.panel
  .panel-body
    .row
      .col-xs-12
        h3 Game: {{game.name}}
        button.btn.btn-primary(type='button', ng-show='game.isOwner && game.status === \'open\'', ng-click='startGame(game._id)') Start Game
        button.btn.btn-primary(type='button', ng-click='leaveGame(game._id)') Leave Game
        button.btn.btn-primary(type='button', ng-click='drawHand()') Draw Hand
        button.btn.btn-primary(type='button', ng-click='startRound()') Start Round
    .row
      .col-xs-12
        .players
          .player(ng-repeat='player in game.players') {{player}}
    .row
      .col-xs-12
        .gameboard
          .qcard(ng-show='game.round.qcard') {{game.round.qcard.text}}
    .row
      .col-xs-12
        .hand
          .card(ng-repeat='card in game.hand', ng-click='selectAnswer(card)') {{card.text}}
    .row
      .col-xs-12
        .play-hand
          button.btn.btn-danger(type='button', ng-show='!game.play && game.answers.length === game.round.qcard.numAnswers', ng-click='playAnswers()') Play Card(s)
    .row
      .col-xs-12
        .gameinfo
          .deck Q Deck Here
          .deck A Deck Here
          .cardCzar isCardCzar
          .awesome-points # Awesome Points (wins)
          button.btn.btn-primary(type='button', ng-click='reDeal()') Redeal Hand

.row
  .col-xs-12
    pre {{game | json}}

