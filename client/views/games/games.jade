.panel
  .panel-body
    .row
      .col-xs-12
        h3 Game: {{game.name}}
        button.btn.btn-primary(type='button', ng-show='isOwner && isWaiting', ng-click='startGame(game._id)') Start Game
        button.btn.btn-primary(type='button', ng-click='leaveGame()') Leave Game
    .row
      .col-xs-12
        .players
          .player(ng-repeat='player in game.players') {{player}}
    .row
      .col-xs-12
        .gameboard
          .qcard Question Card
    .row
      .col-xs-12
        .hand
          .card Card Text 1
          .card Card Text 2
          .card Card Text 3
          .card Card Text 4
          .card Card Text 5
          .card Card Text 6
          .card Card Text 7
          .card Card Text 8
          .card Card Text 9
          .card Card Text 10
    .row
      .col-xs-12
        .gameinfo
          .deck Q Deck Here
          .deck A Deck Here
          .cardCzar isCardCzar
          .awesome-points # Awesome Points (wins)
          button.btn.btn-primary(type='button', ng-click='reDeal()') Redeal Hand

.row
  .col-xs-12
    pre isOwner {{isOwner | json}}
    pre isWaiting {{isWaiting | json}}
    pre {{game | json}}

