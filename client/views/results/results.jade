//  | Launch Card Display Modal
.wrapper(ng-controller='ResultsCtrl')
  button.btn.btn-primary.btn-lg(type='button', ng-click='showModal()')
    | Launch Results Modal
  //  Modal
  #results.modal.fade(tabindex='-1', role='dialog', aria-labelledby='resultsLabel', aria-hidden='true')
    .modal-dialog.modal-lg
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal')
            span(aria-hidden='true') Ã—
            span.sr-only Close
          h4#resultsLabel.modal-title Results
        .modal-body
          | {{title}}
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close

