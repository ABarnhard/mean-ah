.navbar.navbar-default.ng-cloak(role='navigation', ng-controller='NavCtrl', ng-cloak)
  .container-fluid
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/#/') MEAN Against Humanity

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-hide='alias')
        li: a(href='/#/login') Login
        li: a(href='/#/register') Register
      ul.nav.navbar-nav.navbar-right(ng-show='alias')
        li: a(href='/#/lobby') Find Games
        li.dropdown(ng-show='gameId')
          a.dropdown-toggle(href='', data-toggle='dropdown')
            | Current Game
            span.caret
          ul.dropdown-menu(role='menu')
            li: a(href='/#/game') Game Room
            li: a(href='', ng-click='voteGameEnd()') Vote To End Game
            li: a(href='', ng-click='leaveGame()') Quit Game
        li.dropdown
          a.dropdown-toggle(href='', data-toggle='dropdown')
            | {{alias}}
            span.caret
          ul.dropdown-menu(role='menu')
            li: a(href='/#/logout') Log Out

